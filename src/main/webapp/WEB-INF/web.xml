<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
    <servlet>
        <servlet-name>Offers</servlet-name>
        <servlet-class>com.boushib.servlets.Offers</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Offer</servlet-name>
        <servlet-class>com.boushib.servlets.OfferServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>User</servlet-name>
        <servlet-class>com.boushib.servlets.UserServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>com.boushib.servlets.Logout</servlet-class>
    </servlet>
    
    <servlet-mapping>
        <servlet-name>Offers</servlet-name>
        <url-pattern>/offers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Offers</servlet-name>
        <url-pattern>/my_offers</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Offer</servlet-name>
        <url-pattern>/offer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Offer</servlet-name>
        <url-pattern>/new_offer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Offer</servlet-name>
        <url-pattern>/update_offer</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>User</servlet-name>
        <url-pattern>/profile</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>User</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
</web-app>
